@model WebProject.Models.Izin

@{
    ViewData["Title"] = "Yeni İzin Talebi";
}
@if(!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<div class="text-center">
    <h2 class="ana-baslik">Yeni İzin Talebi Oluştur</h2>
</div>

<div class="d-flex justify-content-center">
    <form asp-action="Yeni" method="post" style="max-width: 400px; width: 100%;">
        <div class="mb-3">
            <label style="color: #763134; font-weight: 600;">Ad Soyad</label>
            <input asp-for="AdSoyad" class="form-control" style="height: 40px;" />
        </div>

        <div class="mb-3">
            <label style="color: #763134; font-weight: 600;">İzin Tipi</label>
            <input asp-for="IzinTipi" class="form-control" style="height: 40px;" />
        </div>

        <div class="mb-3">
            <label style="color: #763134; font-weight: 600;">Başlangıç Tarihi</label>
            <input asp-for="BaslangicTarihi" type="date" class="form-control" style="height: 40px;" min = "@DateTime.Today.ToString("yyyy-MM-dd")" />
        </div>

        <div class="mb-3">
            <label style="color: #763134; font-weight: 600;">Bitiş Tarihi</label>
            <input asp-for="BitisTarihi" type="date" class="form-control" style="height: 40px;" min = "@DateTime.Today.ToString("yyyy-MM-dd")" />
        </div>

        <div class="mb-3">
            <label style="color: #763134; font-weight: 600;">Açıklama</label>
            <textarea asp-for="Aciklama" class="form-control" style="height: 80px; resize: none;"></textarea>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary me-2">Talep Oluştur</button>
            <a asp-controller="Izin" asp-action="Index" class="btn btn-secondary">Geri Dön</a>
        </div>
    </form>
</div>
