@model WebProject.Models.Kullanici

@{
    ViewData["Title"] = "Kayıt Ol";                                 //kayıt olma formu
}

<div class="text-center">
    <h2 class="ana-baslik">Kayıt Ol</h2>
</div>

<div class="d-flex justify-content-center">
    <form asp-action="Register" method="post" style="max-width: 400px; width: 100%;">
        <div class="mb-3">
            <label style="color: #763134; font-weight: 600;">Ad Soyad:</label>
            <input asp-for="AdSoyad" class="form-control" style="height: 40px;" required />
            <span asp-validation-for="AdSoyad" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label style="color: #763134; font-weight: 600;">Şifre:</label>
            <input asp-for="Sifre" type="password" class="form-control" style="height: 40px;" required minlength="8"/>      <!-- en az 8 karakter -->  
            <span asp-validation-for="Sifre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label style="color: #763134; font-weight: 600;">Rol Seçin:</label>
            <select asp-for="Rol" class="form-control" style="height: 40px;">
                <option value="IzinKullanicisi">İzin Kullanıcısı</option>                   <!-- kayıt olurken admin seçemez -->  
                <option value="EkipmanKullanicisi">Ekipman Kullanıcısı</option>
            </select>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary me-2">Kayıt Ol</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Geri Dön</a>
        </div>
    </form>
</div>
